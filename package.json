{
  "name": "myadmin-client-vue",
  "author": "detain",
  "main": "electron/electron.js",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "clean": "rm -rf dist dist_electron",
    "dev": "vite --cors",
    "build:ts": "vue-tsc --noEmit && vite build",
    "build": "vite build",
    "serve": "vite preview",
    "preview": "vite preview",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs --fix --ignore-path .gitignore",
    "format": "prettier --write src/",
    "electron": "wait-on tcp:3000 && cross-env IS_DEV=true electron .",
    "electron:pack": "electron-builder --dir",
    "electron:dev": "concurrently -k \"cross-env BROWSER=none yarn dev\" \"yarn electron\"",
    "electron:builder": "electron-builder",
    "build:for:electron": "vue-tsc --noEmit && cross-env ELECTRON=true vite build",
    "build:for:electron:nots": "cross-env ELECTRON=true vite build",
    "app:build": "yarn build:for:electron && yarn electron:builder",
    "app:build:nots": "yarn build:for:electron:nots && yarn electron:builder"
  },
  "build": {
    "appId": "com.my-website.my-app",
    "productName": "MyApp",
    "copyright": "Copyright Â© 2019 ${author}",
    "mac": {
      "category": "public.app-category.utilities"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist_electron"
    }
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.15.4",
    "@vueuse/core": "*",
    "axios": "*",
    "datatables.net-bs": "^*",
    "datatables.net-bs4": "*",
    "datatables.net-buttons": "*",
    "datatables.net-buttons-bs": "^*",
    "datatables.net-buttons-bs4": "*",
    "datatables.net-dt": "*",
    "datatables.net-plugins": "^*",
    "datatables.net-responsive-bs": "^*",
    "datatables.net-responsive-bs4": "*",
    "datatables.net-searchpanes-bs": "^*",
    "datatables.net-select": "*",
    "datatables.net-select-bs": "^*",
    "datatables.net-select-bs4": "*",
    "datatables.net-vue3": "*",
    "electron-log": "*",
    "electron-store": "*",
    "electron-updater": "^4.0",
    "pinia": "*",
    "unplugin-auto-import": "*",
    "vee-validate": "*",
    "vue": ">=3.2.47",
    "vue-query": "*",
    "vue-router": "*",
    "yup": "*"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "*",
    "@vitejs/plugin-vue": "*",
    "@vue/eslint-config-prettier": "*",
    "autoprefixer": "*",
    "concurrently": "*",
    "cross-env": "*",
    "electron": "*",
    "electron-builder": "*",
    "electron-devtools-installer": "*",
    "eslint": "*",
    "eslint-plugin-vue": "*",
    "json": "*",
    "nodemon": "*",
    "prettier": "*",
    "typescript": "*",
    "vite": "*",
    "vite-plugin-i18n-resources": "*",
    "vite-plugin-inspect": "*",
    "vue-tsc": "*",
    "wait-on": "*"
  }
}
